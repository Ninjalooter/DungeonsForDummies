<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:nl="http://www.ninjalooter.de/xmlns" 
    xmlns="http://www.blizzard.com/wow/ui">
  <Script file="Ninjalooter_DungeonsForDummies.lua" />
  <Frame name="NL_DFD_Frame" strata="DIALOG" parent="UIParent" toplevel="true" movable="true" enableMouse="true">
	<TitleRegion>
		<Size x="170" y="210"/>
		<Anchors><Anchor point="TOP"/></Anchors>
	</TitleRegion>
	 
	<Size>
		<AbsDimension x="170" y="210" />
	</Size>
	<Anchors>
		<Anchor point="CENTER" />
	</Anchors>
	<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" title="true">
		<BackgroundInsets>
			<AbsInset left="11" right="12" top="12" bottom="11" />
		</BackgroundInsets>
		<EdgeSize>
			<AbsValue val="32" />
		</EdgeSize>
	</Backdrop>
	<Layers>
      <Layer level="ARTWORK">
        <Texture name="DFD_Header"
          file="Interface\DialogFrame\UI-DialogBox-Header">
          <Size>
            <AbsDimension x="200" y="64"/>
          </Size>
          <Anchors>
            <Anchor point="TOP">
              <Offset>
                <AbsDimension x="0" y="12"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
        <FontString inherits="GameFontNormal" text="DFD">
          <Anchors>
            <Anchor point="TOP" relativeTo="DFD_Header">
              <Offset>
                <AbsDimension x="0" y="-13"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
	<Frames>
		<Button name="DropDownMenuButton" inherits="UIDropDownMenuTemplate">
		   <Anchors><Anchor point="TOP"><Offset x="-60" y="-30" /></Anchor></Anchors>
		   <Scripts>
				<OnShow>
					DropDownMenuButton_OnShow();
				</OnShow>
				<OnLoad>
				   UIDropDownMenu_Initialize(self, DropDownMenu_OnLoad);
			   </OnLoad>
			   <OnClick>
				   DropDownMenuButton_OnClick();
			   </OnClick>
		   </Scripts>
		</Button>
	   
		<Button name="Button1" inherits="UIPanelButtonTemplate" text="Bosstaktik">
			<Size>
				<AbsDimension x="140" y="23" />
			</Size>
			<Anchors>
				<Anchor point="CENTER">
					<Offset x="0" y="30" />
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>NL_WriteDescription("GUIDE");</OnClick>
			</Scripts>
		</Button>
		<Button name="Button2" inherits="UIPanelButtonTemplate" text="Erfolge">
			<Size>
				<AbsDimension x="140" y="23" />
			</Size>
			<Anchors>
				<Anchor point="CENTER">
					<Offset x="0" y="0" />
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>NL_WriteDescription("ACHIEVEMENTS");</OnClick>
			</Scripts>
		</Button>
		<Button name="Button3" inherits="UIPanelButtonTemplate" text="Loot">
			<Size>
				<AbsDimension x="140" y="23" />
			</Size>
			<Anchors>
				<Anchor point="CENTER">
					<Offset x="0" y="-30" />
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>NL_WriteDescription("LOOT");</OnClick>
			</Scripts>
		</Button>
		
		<CheckButton name="AutoCloseButton" inherits="OptionsCheckButtonTemplate">
			<Scripts>
				<OnShow>AutoCloseButton_OnShow();</OnShow>
				<OnClick>AutoCloseButton_OnClick();</OnClick>
			</Scripts>
			<Anchors>
				<Anchor point="BOTTOM">
					<Offset x="-60" y="15" />
				</Anchor>
			</Anchors>
		</CheckButton>
	</Frames>
	<Scripts>
		<OnLoad>NL_Init();</OnLoad>
	</Scripts>
  </Frame>
</Ui>